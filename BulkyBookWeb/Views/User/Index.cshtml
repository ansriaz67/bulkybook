@model IEnumerable<RegisterModel>


@{
    ViewData["Title"] = "Index";
    int intSno = 0;
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Login" asp-action="Register" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New User</a>
        </div>
    </div>
</div>

@*<div class="col-4 p-0 justify-content-end">
    <form asp-controller="User" asp-action="Index">
        <span class="btn-group m-2">
            <input class="form-control" type="text" name="SearchText" placeholder="Search Text" />
            <input class="p-1 mx-1 btn btn-sm btn-info" type="submit" value="Submit" />
        </span>
    </form>
</div>*@

<table class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Name</th>
            @*<th><a class="text-decoration-none" asp-controller="Category" asp-action="Index" asp-route-SortOrder="@ViewData["NameSort"]">Category Name</a></th>*@
            <th>Email</th>
            <th>Password</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            intSno += 1;
            <tr>
                <td>@intSno</td>
                <td style="width:50%">@user.Name</td>
                <td style="width: 30%">@user.Email</td>
                <td style="width: 30%">@user.Password</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-secondary mx-2" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

